<MyButton@Button>:
    font_size:40
    color:5,3,0
    # background_color:1,0,1

<MyGridlayout>:
    id:calculator
    display:input    
    rows:5
    padding: 5
    spacing: '2dp'
    
    BoxLayout:

        TextInput:
            id:input
            font_size: 40
            multiline:False
            background_color:.5,2,2

    BoxLayout:
        spacing: '1dp'
         
        MyButton:
            text:"7"
            on_press: input.text+=self.text
        MyButton:
            text:"8"
            on_press: input.text+=self.text
        MyButton:
            text:"9"
            on_press: input.text+=self.text
        MyButton:
            text:"+"
            on_press: input.text+=self.text

    BoxLayout:
        spacing: '1dp'
        MyButton:
            text:"4"
            on_press: input.text+=self.text

        MyButton:
            text:"5"
            on_press: input.text+=self.text

        MyButton:
            text:"6"
            on_press: input.text+=self.text

        MyButton:
            text:"-"
            on_press: input.text+=self.text

    BoxLayout:
        spacing: '1dp'

        MyButton:
            text:"3"
            on_press: input.text+=self.text

        MyButton:
            text:"2"
            on_press: input.text+=self.text

        MyButton:
            text:"1"
            on_press: input.text+=self.text

        MyButton:
            text:"*"
            on_press: input.text+=self.text

    BoxLayout:
        spacing: '1dp'

        MyButton:
            text:"Clear"
            font_size:"15"
            background_color:1,0,0
            color:1,1,1
            on_press: input.text=""


        MyButton:
            text:"0"
            on_press: input.text+=self.text

        MyButton:
            text:"="
            background_color:0,4,1
            color:1,0,4
            on_press:calculator.calc(input.text)
           


        MyButton:
            text:"/"
            on_press: input.text+=self.text

            
            
                         
            
